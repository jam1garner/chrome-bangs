{
    "name": "Google Bangs",
    "version": "1.0",
    "description": "An extension to add duckduckgo bangs to google searches",
    "background": {
        "scripts": ["background.js", "bang.js"]
    },
     "content_scripts": [
   {
     "matches": ["https://*.startpage.com/*"],
     "js": ["startpage.js", "check_for_bang.js"]
   },

  {
    "matches":        ["http://*/*", "https://*/*"],
    "include_globs":  ["http://www.google.*/*", "https://www.google.*/*"],
    "js": ["google.js","check_for_bang.js"]
  
  }
 ],
    "permissions": [
        "webRequest",
	"tabs",
        "webRequestBlocking",
	"https://duckduckgo.com/bang_lite.html",
        "https://*.google*/search*",
	"https://*.startpage.com/do/dsearch*"
    ],
    "icons": {
        "256": "icon.png"
    },
    "manifest_version": 2
}
